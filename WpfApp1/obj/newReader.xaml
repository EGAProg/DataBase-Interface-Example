<Window x:Class="WpfApp1.newReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="newReader" Height="222" Width="459" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="FIOTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="FIO" VerticalAlignment="Top" Width="425" Height="20"/>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Adress" VerticalAlignment="Top" Width="425" Height="20"/>
        <TextBox x:Name="SeriaTextBox" HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Seria" VerticalAlignment="Top" Width="425" Height="20"/>
        <TextBox x:Name="NomerTextBox" HorizontalAlignment="Left" Margin="10,85,0,0" TextWrapping="Wrap" Text="Nomer" VerticalAlignment="Top" Width="425" Height="20"/>
        <TextBox x:Name="VydanTextBox" HorizontalAlignment="Left" Margin="10,135,0,0" TextWrapping="Wrap" Text="Vydan" VerticalAlignment="Top" Width="425" Height="20"/>
        <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Margin="10,110,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" Width="425" Height="20"/>
        <Button x:Name="AddBtn" Content="Add" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Width="120" Click="AddBtn_Click"/>
        <Label x:Name="StatusLBL" Content="" HorizontalAlignment="Left" Margin="315,157,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
