<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Library" Height="410" Width="765" Background="White" ResizeMode="CanMinimize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid x:Name="LayoutRoot" Margin="0,0,0,-16">
        <Button x:Name="SelectsBtn" Content="View All Info" HorizontalAlignment="Left" Margin="194,195,0,0" VerticalAlignment="Top" Height="165" Width="164" FontFamily="Arial" FontSize="22" Click="SelectsBtn_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="NewBookBtn" Content="Add New Book" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="165" Width="164" FontFamily="Arial" Click="NewBookBtn_Click" FontSize="22" Grid.ColumnSpan="2"/>
        <Button x:Name="NewGanreBtn" Content="Add New Ganre" HorizontalAlignment="Left" Margin="569,10,0,0" VerticalAlignment="Top" Height="165" Width="164" FontFamily="Arial" FontSize="20" Click="NewGanreBtn_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="NewAuthorBtn" Content="Add New Author" HorizontalAlignment="Left" Margin="382,10,0,0" VerticalAlignment="Top" Height="165" Width="164" FontFamily="Arial" FontSize="20" Click="NewAuthorBtn_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="NewReaderBtn" Content="Add New Reader" HorizontalAlignment="Left" Margin="194,10,0,0" VerticalAlignment="Top" Height="165" Width="164" FontFamily="Arial" FontSize="20" Click="NewReaderBtn_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="MoovingBookBtn" Content="Mooving Books" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Height="165" Width="164" FontFamily="Arial" FontSize="20" Click="MoovingBookBtn_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
